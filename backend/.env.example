# ============================================
# AUTORESCUE - VARIABLES D'ENVIRONNEMENT
# ============================================

# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api
API_VERSION=v1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# NotchPay Configuration
NOTCHPAY_PUBLIC_KEY=your-notchpay-public-key
NOTCHPAY_SECRET_KEY=your-notchpay-secret-key
NOTCHPAY_WEBHOOK_SECRET=your-notchpay-webhook-secret
NOTCHPAY_API_URL=https://api.notchpay.co

# Mapbox (optional, for server-side geocoding)
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
