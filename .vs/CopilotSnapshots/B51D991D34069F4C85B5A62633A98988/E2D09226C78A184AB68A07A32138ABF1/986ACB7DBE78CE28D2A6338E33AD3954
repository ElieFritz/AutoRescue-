'use client';

import { useEffect, useState } from 'react';
import Link from 'next/link';
import { motion } from 'framer-motion';
import { Wrench, MapPin, Clock, CheckCircle, ArrowRight, AlertCircle, Navigation, Phone } from 'lucide-react';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { Skeleton } from '@/components/ui/skeleton';
import { useAuthStore } from '@/stores/auth-store';
import { mechanicsApi, breakdownsApi } from '@/lib/api';
import { BREAKDOWN_STATUS_LABELS, BREAKDOWN_STATUS_COLORS } from '@/lib/constants';
import { formatDate } from '@/lib/utils';
import { toast } from 'sonner';

export default function MechanicDashboard() {
  const { user } = useAuthStore();
  const [mechanicProfile, setMechanicProfile] = useState<any>(null);
  const [activeMissions, setActiveMissions] = useState<any[]>([]);
  const [isLoading, setIsLoading] = useState(true);
  const [isUpdatingStatus, setIsUpdatingStatus] = useState(false);

  useEffect(() => {
    const fetchData = async () => {
      try {
        setMechanicProfile({ status: 'available', completed_jobs: 0, rating: 4.8 });
        setActiveMissions([]);
      } catch (error) {
        console.error('Error fetching data:', error);
      } finally {
        setIsLoading(false);
      }
    };

    fetchData();
  }, []);

  const handleStatusToggle = async () => {
    if (!mechanicProfile) return;

    setIsUpdatingStatus(true);
    try {
      const newStatus = mechanicProfile.status === 'available' ? 'unavailable' : 'available';
      setMechanicProfile({ ...mechanicProfile, status: newStatus });
      toast.success(`Statut mis a jour: ${newStatus === 'available' ? 'Disponible' : 'Indisponible'}`);
    } catch (error) {
      toast.error('Erreur lors de la mise a jour du statut');
    } finally {
      setIsUpdatingStatus(false);
    }
  };

  const updateLocation = () => {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(
        async (position) => {
          try {
            toast.success('Position mise a jour');
          } catch (error) {
            toast.error('Erreur lors de la mise a jour de la position');
          }
        },
        (error) => {
          toast.error('Impossible d\'obtenir votre position');
        }
      );
    }
  };

  if (isLoading) {
    return (
      <div className="space-y-6">
        <Skeleton className="h-8 w-48" />
        <Skeleton className="h-32" />
        <Skeleton className="h-64" />
      </div>
    );
  }

  const currentMission = activeMissions.find(
    (m) => !['completed', 'cancelled', 'pending'].includes(m.status)
  );

  return (
    <div className="space-y-6">
      {/* Welcome */}
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        className="flex items-center justify-between"
      >
        <div>
          <h1 className="text-2xl font-bold">
            Bonjour, {user?.first_name || 'Mecanicien'} 👋
          </h1>
          <p className="text-muted-foreground">
            {mechanicProfile?.garage?.name || 'Garage'}
          </p>
        </div>
        <div className="flex items-center gap-2">
          <Button
            variant="outline"
            size="sm"
            onClick={updateLocation}
          >
            <Navigation className="mr-2 h-4 w-4" />
            Position
          </Button>
          <Button
            variant={mechanicProfile?.status === 'available' ? 'default' : 'secondary'}
            size="sm"
            onClick={handleStatusToggle}
            disabled={isUpdatingStatus}
          >
            {mechanicProfile?.status === 'available' ? 'Disponible' : 'Indisponible'}
          </Button>
        </div>
      </motion.div>

      {/* Current mission */}
      {currentMission && (
        <motion.div
          initial={{ opacity: 0, scale: 0.95 }}
          animate={{ opacity: 1, scale: 1 }}
        >
          <Card className="border-primary bg-primary/5">
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <AlertCircle className="h-5 w-5 text-primary" />
                Mission en cours
              </CardTitle>
            </CardHeader>
            <CardContent className="space-y-4">
              <div>
                <p className="font-medium text-lg">{currentMission.title}</p>
                <p className="text-muted-foreground">
                  {currentMission.motorist?.first_name} {currentMission.motorist?.last_name}
                </p>
              </div>
              
              <div className="flex items-center gap-4 text-sm">
                <Badge className={BREAKDOWN_STATUS_COLORS[currentMission.status] || ''}>
                  {BREAKDOWN_STATUS_LABELS[currentMission.status] || currentMission.status}
                </Badge>
                <span className="flex items-center gap-1 text-muted-foreground">
                  <MapPin className="h-4 w-4" />
                  {currentMission.address || 'Position GPS'}
                </span>
              </div>
              
              <div className="flex gap-2">
                <Link href={`/mechanic/mission/${currentMission.id}`} className="flex-1">
                  <Button className="w-full">
                    Voir les details <ArrowRight className="ml-2 h-4 w-4" />
                  </Button>
                </Link>
                {currentMission.motorist?.phone && (
                  <a href={`tel:${currentMission.motorist.phone}`}>
                    <Button variant="outline">
                      <Phone className="h-4 w-4 mr-2" />
                      Appeler
                    </Button>
                  </a>
                )}
              </div>
            </CardContent>
          </Card>
        </motion.div>
      )}

      {/* Stats */}
      <div className="grid grid-cols-3 gap-4">
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.2 }}
        >
          <Card>
            <CardContent className="p-4 text-center">
              <div className="w-12 h-12 rounded-full mx-auto mb-2 flex items-center justify-center bg-blue-100 dark:bg-blue-900/30">
                <Wrench className="h-6 w-6 text-blue-600" />
              </div>
              <p className="text-2xl font-bold">{activeMissions.length}</p>
              <p className="text-xs text-muted-foreground">Missions actives</p>
            </CardContent>
          </Card>
        </motion.div>

        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.3 }}
        >
          <Card>
            <CardContent className="p-4 text-center">
              <div className="w-12 h-12 rounded-full mx-auto mb-2 flex items-center justify-center bg-green-100 dark:bg-green-900/30">
                <CheckCircle className="h-6 w-6 text-green-600" />
              </div>
              <p className="text-2xl font-bold">{mechanicProfile?.completed_jobs || 0}</p>
              <p className="text-xs text-muted-foreground">Terminees ce mois</p>
            </CardContent>
          </Card>
        </motion.div>

        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.4 }}
        >
          <Card>
            <CardContent className="p-4 text-center">
              <div className="w-12 h-12 rounded-full mx-auto mb-2 flex items-center justify-center bg-yellow-100 dark:bg-yellow-900/30">
                <span className="text-2xl">⭐</span>
              </div>
              <p className="text-2xl font-bold">{mechanicProfile?.rating || '4.8'}</p>
              <p className="text-xs text-muted-foreground">Note moyenne</p>
            </CardContent>
          </Card>
        </motion.div>
      </div>

      {/* Missions list */}
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.5 }}
      >
        <Card>
          <CardHeader className="flex flex-row items-center justify-between">
            <CardTitle>Toutes les missions</CardTitle>
            <Link href="/mechanic/history">
              <Button variant="ghost" size="sm">
                Historique <ArrowRight className="ml-2 h-4 w-4" />
              </Button>
            </Link>
          </CardHeader>
          <CardContent>
            {activeMissions.length === 0 ? (
              <div className="text-center py-8">
                <CheckCircle className="h-12 w-12 text-muted-foreground mx-auto mb-4" />
                <p className="text-muted-foreground">Aucune mission en cours</p>
                <p className="text-sm text-muted-foreground mt-2">
                  Restez disponible pour recevoir de nouvelles missions
                </p>
              </div>
            ) : (
              <div className="space-y-3">
                {activeMissions.map((mission: any) => (
                  <Link
                    key={mission.id}
                    href={`/mechanic/mission/${mission.id}`}
                    className="block p-4 rounded-xl border hover:bg-accent transition-colors"
                  >
                    <div className="flex justify-between items-start mb-2">
                      <div>
                        <p className="font-medium">{mission.title}</p>
                        <p className="text-sm text-muted-foreground">
                          {mission.motorist?.first_name} {mission.motorist?.last_name}
                        </p>
                      </div>
                      <Badge className={BREAKDOWN_STATUS_COLORS[mission.status] || ''}>
                        {BREAKDOWN_STATUS_LABELS[mission.status] || mission.status}
                      </Badge>
                    </div>
                    <div className="flex items-center gap-4 text-xs text-muted-foreground">
                      <span className="flex items-center gap-1">
                        <Clock className="h-3 w-3" />
                        {formatDate(mission.created_at)}
                      </span>
                      <span className="flex items-center gap-1">
                        <MapPin className="h-3 w-3" />
                        {mission.address || 'Position GPS'}
                      </span>
                    </div>
                  </Link>
                ))}
              </div>
            )}
          </CardContent>
        </Card>
      </motion.div>
    </div>
  );
}
