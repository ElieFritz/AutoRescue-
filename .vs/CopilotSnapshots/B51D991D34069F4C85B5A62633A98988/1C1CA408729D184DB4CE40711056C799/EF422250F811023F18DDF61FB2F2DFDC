export const metadata: Metadata = {
  title: 'AutoRescue - DCpannage Automobile',
  description: 'Plateforme de dCpannage automobile gColocalisC. Trouvez un garage proche et recevez une assistance rapide.',
  manifest: '/manifest.json',
  appleWebApp: {
    capable: true,
