'use client';

import { useEffect } from 'react';
import { useRouter } from 'next/navigation';
import { motion } from 'framer-motion';
import { Car, MapPin, Wrench, Shield } from 'lucide-react';
import { Button } from '@/components/ui/button';
import { useAuthStore } from '@/stores/auth-store';

export default function HomePage() {
  const router = useRouter();
  const { user, isLoading } = useAuthStore();

  useEffect(() => {
    if (!isLoading && user) {
      // Redirect based on role
      switch (user.role) {
        case 'motorist':
          router.push('/motorist');
          break;
        case 'garage':
          router.push('/garage');
          break;
        case 'mechanic':
          router.push('/mechanic');
          break;
        case 'admin':
          router.push('/admin');
          break;
      }
    }
  }, [user, isLoading, router]);

  const features = [
    {
      icon: MapPin,
      title: 'Geolocalisation',
      description: 'Trouvez les garages les plus proches en temps reel',
    },
    {
      icon: Wrench,
      title: 'Depannage rapide',
      description: 'Un garagiste arrive sur place en quelques minutes',
    },
    {
      icon: Shield,
      title: 'Paiement securise',
      description: 'Payez en toute securite via notre plateforme',
    },
  ];

  return (
    <div className="min-h-screen bg-gradient-to-br from-rescue-50 via-white to-rescue-100 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
      {/* Hero Section */}
      <div className="container mx-auto px-4 pt-20 pb-16">
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.6 }}
          className="text-center"
        >
          {/* Logo */}
          <div className="flex justify-center mb-8">
            <div className="relative">
              <div className="w-24 h-24 bg-gradient-to-br from-rescue-500 to-rescue-700 rounded-3xl flex items-center justify-center shadow-2xl shadow-rescue-500/30">
                <Car className="w-12 h-12 text-white" />
              </div>
              <div className="absolute -bottom-2 -right-2 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center shadow-lg">
                <Wrench className="w-4 h-4 text-white" />
              </div>
            </div>
          </div>

          <h1 className="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-4">
            Auto<span className="text-rescue-600">Rescue</span>
          </h1>
          <p className="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
            En panne ? Un garagiste arrive chez vous en quelques minutes.
            Depannage automobile geolocalise, simple et securise.
          </p>

          {/* CTA Buttons */}
          <div className="flex flex-col sm:flex-row gap-4 justify-center">
            <Button
              size="lg"
              className="gradient-primary text-white shadow-lg shadow-rescue-500/30 hover:shadow-xl transition-shadow"
              onClick={() => router.push('/register')}
            >
              Commencer maintenant
            </Button>
            <Button
              size="lg"
              variant="outline"
              onClick={() => router.push('/login')}
            >
              Se connecter
            </Button>
          </div>
        </motion.div>

        {/* Features */}
        <motion.div
          initial={{ opacity: 0, y: 40 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.6, delay: 0.2 }}
          className="grid grid-cols-1 md:grid-cols-3 gap-6 mt-20"
        >
          {features.map((feature, index) => (
            <motion.div
              key={feature.title}
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ duration: 0.4, delay: 0.3 + index * 0.1 }}
              className="glass-card p-6 rounded-2xl text-center"
            >
              <div className="w-14 h-14 bg-rescue-100 dark:bg-rescue-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <feature.icon className="w-7 h-7 text-rescue-600" />
              </div>
              <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                {feature.title}
              </h3>
              <p className="text-gray-600 dark:text-gray-400">
                {feature.description}
              </p>
            </motion.div>
          ))}
        </motion.div>
      </div>

      {/* Bottom wave */}
      <div className="absolute bottom-0 left-0 right-0">
        <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z"
            className="fill-white dark:fill-gray-900"
          />
        </svg>
      </div>
    </div>
  );
}
